<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FFF"
        app:cardPreventCornerOverlap="false"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                 android:orientation="vertical">

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:text="مستشفى النيل البدراوي"
                    android:textColor="#6d6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />


                <RatingBar
                    android:id="@+id/supplier_rate"
                    style="@style/customRating"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:isIndicator="true"

                    android:numStars="5"
                    android:stepSize="1"></RatingBar>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="مواعيد العمل :-"
                    android:textColor="#6d6d6d"
                    android:textSize="9sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/supplier_work_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="من 8.00 صباحاً الى 10.00 مساءً"
                    android:textColor="#6d6d6d"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/supplier_logo"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/appicon" />


        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>